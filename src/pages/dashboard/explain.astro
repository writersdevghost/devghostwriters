---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import CodeExplainer from "../../components/dashboard/CodeExplainer.jsx";
---

<DashboardLayout>
  <div class="max-w-4xl ml-0 md:ml-20">
    <h1 class="text-3xl font-bold mb-2 text-[#00ADB5]">Code Explainer</h1>
    <p class="text-gray-600 mb-6">
      Paste code you want to understand, and we'll explain how it works.
    </p>

    <div class="bg-white p-6 rounded-lg shadow-md">
      <CodeExplainer client:load />
    </div>
  </div>
</DashboardLayout>
