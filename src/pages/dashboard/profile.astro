---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
---

<DashboardLayout>
  <div class="px-4 sm:px-6 py-6 w-full max-w-5xl mx-auto">
    <div class="bg-[#222831] rounded-lg shadow-lg overflow-hidden mb-6">
      <div
        class="p-5 sm:p-6 flex flex-col sm:flex-row sm:items-center justify-between"
      >
        <div class="flex items-center">
          <div
            class="h-16 w-16 rounded-full bg-[#393E46] flex items-center justify-center text-[#EEEEEE] text-xl font-bold mr-4"
          >
            JS
          </div>
          <div>
            <h1 class="text-xl font-bold text-[#EEEEEE]">John Smith</h1>
            <p class="text-[#00ADB5] text-sm">Developer</p>
          </div>
        </div>
        <button
          class="bg-[#00ADB5] hover:bg-[#00ADB5]/80 text-[#EEEEEE] px-3 py-1.5 rounded text-sm font-medium transition-colors duration-200 mt-4 sm:mt-0"
        >
          Edit Profile
        </button>
      </div>
    </div>

    <!-- Profile Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Left Column -->
      <div class="md:col-span-1">
        <!-- User Info Card -->
        <div class="bg-[#222831] rounded-lg shadow-lg p-5 mb-6">
          <h2 class="text-lg font-semibold text-[#EEEEEE] mb-4">
            Account Info
          </h2>

          <div class="space-y-3 text-sm">
            <div>
              <p class="text-[#00ADB5]">Email</p>
              <p class="text-[#EEEEEE]">john.smith@example.com</p>
            </div>
            <div>
              <p class="text-[#00ADB5]">Member Since</p>
              <p class="text-[#EEEEEE]">April 2025</p>
            </div>
            <div>
              <p class="text-[#00ADB5]">Plan</p>
              <p class="text-[#EEEEEE]">Developer Pro</p>
            </div>
            <div>
              <p class="text-[#00ADB5]">Credits</p>
              <p class="text-[#EEEEEE]">850 / 1000</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column -->
      <div class="md:col-span-2">
        <div class="bg-[#222831] rounded-lg shadow-lg p-5 mb-6">
          <h2 class="text-lg font-semibold text-[#EEEEEE] mb-4">Activity</h2>

          <div class="space-y-4">
            <div>
              <div class="flex justify-between mb-1.5">
                <span class="text-[#EEEEEE] text-sm">Total Usage</span>
                <span class="text-[#00ADB5] text-sm font-medium">432</span>
              </div>
              <div class="h-2 bg-[#393E46] rounded-full">
                <div class="h-2 bg-[#00ADB5] rounded-full w-4/5"></div>
              </div>
            </div>

            <div>
              <div class="flex justify-between mb-1.5">
                <span class="text-[#EEEEEE] text-sm">This Week</span>
                <span class="text-[#00ADB5] text-sm font-medium">38</span>
              </div>
              <div class="h-2 bg-[#393E46] rounded-full">
                <div class="h-2 bg-[#00ADB5] rounded-full w-1/2"></div>
              </div>
            </div>

            <div>
              <div class="flex justify-between mb-1.5">
                <span class="text-[#EEEEEE] text-sm">Today</span>
                <span class="text-[#00ADB5] text-sm font-medium">7</span>
              </div>
              <div class="h-2 bg-[#393E46] rounded-full">
                <div class="h-2 bg-[#00ADB5] rounded-full w-1/4"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- AI Usage Analytics -->
        <div class="bg-[#222831] rounded-lg shadow-lg p-5">
          <h2 class="text-lg font-semibold text-[#EEEEEE] mb-4">
            Service Usage
          </h2>

          <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-5">
            <div class="bg-[#393E46] rounded p-3 text-center">
              <div class="text-[#00ADB5] font-bold text-lg">128</div>
              <div class="text-[#EEEEEE] text-xs mt-1">Snippet Generator</div>
            </div>

            <div class="bg-[#393E46] rounded p-3 text-center">
              <div class="text-[#00ADB5] font-bold text-lg">89</div>
              <div class="text-[#EEEEEE] text-xs mt-1">Bug Fixer</div>
            </div>

            <div class="bg-[#393E46] rounded p-3 text-center">
              <div class="text-[#00ADB5] font-bold text-lg">74</div>
              <div class="text-[#EEEEEE] text-xs mt-1">Code Converter</div>
            </div>

            <div class="bg-[#393E46] rounded p-3 text-center">
              <div class="text-[#00ADB5] font-bold text-lg">65</div>
              <div class="text-[#EEEEEE] text-xs mt-1">Code Explainer</div>
            </div>

            <div class="bg-[#393E46] rounded p-3 text-center">
              <div class="text-[#00ADB5] font-bold text-lg">42</div>
              <div class="text-[#EEEEEE] text-xs mt-1">Refactoring Hints</div>
            </div>

            <div class="bg-[#393E46] rounded p-3 text-center">
              <div class="text-[#00ADB5] font-bold text-lg">15</div>
              <div class="text-[#EEEEEE] text-xs mt-1">Code Minify</div>
            </div>

            <div class="bg-[#393E46] rounded p-3 text-center">
              <div class="text-[#00ADB5] font-bold text-lg">11</div>
              <div class="text-[#EEEEEE] text-xs mt-1">Complexity Score</div>
            </div>

            <div class="bg-[#393E46] rounded p-3 text-center">
              <div class="text-[#00ADB5] font-bold text-lg">8</div>
              <div class="text-[#EEEEEE] text-xs mt-1">Image Generator</div>
            </div>
          </div>

          <div class="border-t border-[#393E46] pt-4">
            <h3 class="text-[#EEEEEE] text-sm font-medium mb-3">
              Weekly Usage
            </h3>
            <div class="h-32 bg-[#393E46]/50 rounded flex items-end p-3">
              <div class="w-1/7 h-1/4 bg-[#00ADB5] mx-1"></div>
              <div class="w-1/7 h-2/4 bg-[#00ADB5] mx-1"></div>
              <div class="w-1/7 h-1/3 bg-[#00ADB5] mx-1"></div>
              <div class="w-1/7 h-3/4 bg-[#00ADB5] mx-1"></div>
              <div class="w-1/7 h-1/2 bg-[#00ADB5] mx-1"></div>
              <div class="w-1/7 h-3/5 bg-[#00ADB5] mx-1"></div>
              <div class="w-1/7 h-4/5 bg-[#00ADB5] mx-1"></div>
            </div>
            <div class="flex justify-between mt-2 text-xs text-[#EEEEEE]/70">
              <span>Mon</span>
              <span>Tue</span>
              <span>Wed</span>
              <span>Thu</span>
              <span>Fri</span>
              <span>Sat</span>
              <span>Sun</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
