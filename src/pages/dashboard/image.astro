---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import ImageGenerator from "../../components/dashboard/ImageGenerator.jsx";
---

<DashboardLayout>
  <div class="max-w-4xl ml-0 md:ml-20">
    <h1 class="text-3xl font-bold mb-2 text-[#00ADB5]">Image Generator</h1>
    <p class="text-gray-600 mb-6">
      Generate images from descriptions using AI.
    </p>

    <div class="bg-white p-6 rounded-lg shadow-md">
      <ImageGenerator client:load />
    </div>
  </div>
</DashboardLayout>
