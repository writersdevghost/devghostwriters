---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="mt-24 mb-16 mx-10 flex flex-col items-center justify-center">
    <div class="w-full max-w-4xl">
      <div
        class="backdrop-blur-lg bg-[#EEEEEE]/10 border border-[#EEEEEE]/20 rounded-xl p-8 shadow-xl relative overflow-hidden mb-8 transition-all duration-300 hover:shadow-2xl hover:border-[#00ADB5]/40 contact-card"
      >
        <div
          class="absolute -top-10 -right-10 w-40 h-40 rounded-full bg-[#00ADB5]/20 blur-xl transition-all duration-500 hover-glow"
        >
        </div>

        <div class="relative z-10">
          <h2 class="text-2xl font-bold text-[#00ADB5] mb-6">Get in Touch</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="flex items-start space-x-4 hover-card">
              <div
                class="bg-[#393E46] p-3 rounded-lg transition-all duration-300 hover:bg-[#00ADB5]/20 hover:-translate-y-1 icon-container"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-[#00ADB5]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-[#00ADB5]">Meet us</h3>
                <p class="text-[#EEEEEE] mt-1">
                  372 Raymond Blvd, Newark, NJ 07105, United States
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4 hover-card">
              <div
                class="bg-[#393E46] p-3 rounded-lg transition-all duration-300 hover:bg-[#00ADB5]/20 hover:-translate-y-1 icon-container"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-[#00ADB5]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-[#00ADB5]">Call Us</h3>
                <p class="text-[#EEEEEE] mt-1">+19737320421</p>
                <p class="text-[#EEEEEE]">Mon-Fri: 9AM - 6PM</p>
              </div>
            </div>

            <div class="flex items-start space-x-4 hover-card">
              <div
                class="bg-[#393E46] p-3 rounded-lg transition-all duration-300 hover:bg-[#00ADB5]/20 hover:-translate-y-1 icon-container"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-[#00ADB5]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-[#00ADB5]">Mail Us</h3>
                <p class="text-[#EEEEEE] mt-1">writersdevghost@gmail.com</p>
                <p class="text-[#EEEEEE]">info@devghostwriters.com</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div
        class="backdrop-blur-lg bg-[#EEEEEE]/10 border border-[#EEEEEE]/20 rounded-xl p-8 shadow-xl relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:border-[#00ADB5]/40 form-card animate-slide-up"
      >
        <div
          class="absolute -top-20 -right-20 w-40 h-40 rounded-full bg-[#00ADB5]/20 blur-xl transition-all duration-500 hover-pulse"
        >
        </div>
        <div
          class="absolute -bottom-20 -left-20 w-60 h-60 rounded-full bg-[#393E46]/30 blur-xl transition-all duration-500 hover-pulse"
        >
        </div>

        <div class="relative z-10">
          <h2 class="text-2xl font-bold text-[#00ADB5] mb-4">
            Send Us a Message
          </h2>
          <p class="text-lg text-[#EEEEEE] mb-6">
            Have questions or feedback? Fill out the form below, and our expert
            support team will get back to you shortly.
          </p>

          <form class="space-y-6" id="contactForm">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-[#EEEEEE] mb-2">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full bg-[#EEEEEE]/10 border border-[#00ADB5]/30 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#00ADB5] text-[#EEEEEE] backdrop-blur-sm transition-all duration-300 hover:bg-[#EEEEEE]/15 input-field"
                  placeholder="Your name"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-[#EEEEEE] mb-2"
                  >Email</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full bg-[#EEEEEE]/10 border border-[#00ADB5]/30 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#00ADB5] text-[#EEEEEE] backdrop-blur-sm transition-all duration-300 hover:bg-[#EEEEEE]/15 input-field"
                  placeholder="your@email.com"
                  required
                />
              </div>
            </div>

            <div>
              <label for="subject" class="block text-[#EEEEEE] mb-2"
                >Subject</label
              >
              <input
                type="text"
                id="subject"
                name="subject"
                class="w-full bg-[#EEEEEE]/10 border border-[#00ADB5]/30 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#00ADB5] text-[#EEEEEE] backdrop-blur-sm transition-all duration-300 hover:bg-[#EEEEEE]/15 input-field"
                placeholder="What's this about?"
                required
              />
            </div>

            <div>
              <label for="message" class="block text-[#EEEEEE] mb-2"
                >Message</label
              >
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full bg-[#EEEEEE]/10 border border-[#00ADB5]/30 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-[#00ADB5] text-[#EEEEEE] backdrop-blur-sm resize-none transition-all duration-300 hover:bg-[#EEEEEE]/15 input-field"
                placeholder="Tell us how we can help you..."
                required></textarea>
            </div>

            <button
              type="submit"
              class="px-8 py-3 bg-[#00ADB5] text-[#EEEEEE] font-medium rounded-lg hover:bg-[#00ADB5]/80 transition-all duration-300 shadow-lg shadow-[#00ADB5]/30 flex items-center justify-center relative overflow-hidden submit-btn group"
            >
              <div
                class="absolute inset-0 w-0 bg-[#EEEEEE] transition-all duration-300 ease-out group-hover:w-full opacity-10"
              >
              </div>
              <span class="relative z-10">Send Message</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 ml-2 relative z-10 transition-transform duration-300 group-hover:translate-x-1"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
              <div
                id="loading-spinner"
                class="hidden absolute inset-0 flex items-center justify-center bg-[#00ADB5]"
              >
                <div
                  class="animate-spin rounded-full h-6 w-6 border-t-2 border-b-2 border-white"
                >
                </div>
              </div>
            </button>
          </form>

          <div
            id="success-message"
            class="hidden mt-4 p-4 bg-green-500/20 border border-green-500/30 rounded-lg text-white"
          >
            <div class="flex items-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2 text-green-500"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <span
                >Your message has been sent successfully! We'll get back to you
                soon.</span
              >
            </div>
          </div>

          <div
            id="error-message"
            class="hidden mt-4 p-4 bg-red-500/20 border border-red-500/30 rounded-lg text-white"
          >
            <div class="flex items-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2 text-red-500"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Something went wrong. Please try again later.</span>
            </div>
          </div>

          <div
            class="mt-12 flex flex-col md:flex-row items-start md:items-center justify-between text-[#EEEEEE]/70 space-y-4 md:space-y-0"
          >
            <div
              class="flex items-center feature-item transition-all duration-300 hover:text-[#EEEEEE] hover:-translate-y-1"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2 text-[#00ADB5]"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M6.672 1.911a1 1 0 10-1.932.518l.259.966a1 1 0 001.932-.518l-.26-.966zM2.429 4.74a1 1 0 10-.517 1.932l.966.259a1 1 0 00.517-1.932l-.966-.26zm8.814-.569a1 1 0 00-1.415-1.414l-.707.707a1 1 0 101.415 1.415l.707-.708zm-7.071 7.072l.707-.707A1 1 0 003.465 9.12l-.708.707a1 1 0 001.415 1.415zm3.2-5.171a1 1 0 00-1.3 1.3l4 10a1 1 0 001.823.075l1.38-2.759 3.018 3.02a1 1 0 001.414-1.415l-3.019-3.02 2.76-1.379a1 1 0 00-.076-1.822l-10-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>AI-Powered Support</span>
            </div>
            <div
              class="flex items-center feature-item transition-all duration-300 hover:text-[#EEEEEE] hover:-translate-y-1"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2 text-[#00ADB5]"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M2 5a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm3.293 1.293a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 01-1.414-1.414L7.586 10 5.293 7.707a1 1 0 010-1.414zM11 12a1 1 0 100 2h3a1 1 0 100-2h-3z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>24/7 Code Generation</span>
            </div>
            <div
              class="flex items-center feature-item transition-all duration-300 hover:text-[#EEEEEE] hover:-translate-y-1"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2 text-[#00ADB5]"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"
                ></path>
              </svg>
              <span>Expert Support Team</span>
            </div>
          </div>
        </div>
      </div>

      <div class="map-container mt-8 animate-fade-in-delayed">
        <div class="text-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-12 w-12 text-[#00ADB5] mx-auto mb-2 animate-float"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
            ></path>
          </svg>

          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.267789397666!2d-74.1349242!3d40.734132699999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c253f9c9456a81%3A0xfb2223887387d759!2s372%20Raymond%20Blvd%2C%20Newark%2C%20NJ%2007105%2C%20USA!5e0!3m2!1sen!2slk!4v1747721601306!5m2!1sen!2slk"
            width="800"
            height="100"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  section {
    position: relative;
    z-index: 10;
  }

  :global(body) {
    background-color: #222831;
    background-image: radial-gradient(
        circle at 10% 20%,
        rgba(0, 173, 181, 0.1) 0%,
        transparent 20%
      ),
      radial-gradient(
        circle at 90% 80%,
        rgba(57, 62, 70, 0.15) 0%,
        transparent 25%
      );
    color: #eeeeee;
  }

  .map-container {
    border-radius: 0.75rem;
    overflow: hidden;
    height: 200px;
    margin-top: 2rem;
    border: 1px solid rgba(238, 238, 238, 0.2);
    background-color: rgba(57, 62, 70, 0.5);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .map-container:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    border-color: rgba(0, 173, 181, 0.3);
  }

  .loading-dot {
    width: 8px;
    height: 8px;
    background-color: #00adb5;
    border-radius: 50%;
    display: inline-block;
    animation: dotPulse 1.5s infinite ease-in-out;
  }

  .loading-dot:nth-child(2) {
    animation-delay: 0.2s;
  }

  .loading-dot:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes dotPulse {
    0%,
    100% {
      transform: scale(0.8);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.2);
      opacity: 1;
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .hover-card:hover .icon-container {
    transform: translateY(-5px) rotate(5deg);
    background-color: rgba(0, 173, 181, 0.3);
  }

  .hover-glow {
    transition: all 0.5s ease;
  }

  .contact-card:hover .hover-glow {
    width: 60px;
    height: 60px;
    opacity: 0.7;
  }

  .hover-pulse {
    transition: all 0.5s ease;
  }

  .form-card:hover .hover-pulse {
    transform: scale(1.1);
    opacity: 0.7;
  }

  .input-field:hover {
    border-color: rgba(0, 173, 181, 0.5);
  }

  .feature-item {
    padding: 0.5rem;
    border-radius: 0.5rem;
  }

  .feature-item:hover svg {
    transform: scale(1.2);
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-in;
  }

  .animate-fade-in-delayed {
    animation: fadeIn 1s ease-in 0.5s both;
  }

  .animate-slide-up {
    animation: slideUp 0.8s ease-out 0.2s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  import emailjs from "@emailjs/browser";

  const SERVICE_ID = "service_jidgl12";
  const TEMPLATE_ID = "template_audqrnf";
  const PUBLIC_KEY = "E3VllKc44TER5Rnn3";

  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contactForm");
    const submitBtn = form.querySelector('button[type="submit"]');
    const loadingSpinner = document.getElementById("loading-spinner");
    const successMessage = document.getElementById("success-message");
    const errorMessage = document.getElementById("error-message");

    emailjs.init(PUBLIC_KEY);

    form.addEventListener("submit", (e) => {
      e.preventDefault();

      submitBtn.querySelector("span").classList.add("opacity-0");
      submitBtn.querySelector("svg").classList.add("opacity-0");
      loadingSpinner.classList.remove("hidden");

      const now = new Date();
      const formattedTime = now.toLocaleString();

      const templateParams = {
        name: form.name.value,
        email: form.email.value,
        subject: form.subject.value,
        message: form.message.value,
        time: formattedTime,
      };

      emailjs
        .send(SERVICE_ID, TEMPLATE_ID, templateParams)
        .then((response) => {
          console.log("SUCCESS!", response.status, response.text);

          loadingSpinner.classList.add("hidden");
          submitBtn.querySelector("span").classList.remove("opacity-0");
          submitBtn.querySelector("svg").classList.remove("opacity-0");

          successMessage.classList.remove("hidden");
          successMessage.classList.add("animate-fade-in");

          form.reset();

          setTimeout(() => {
            successMessage.classList.add("opacity-0");
            setTimeout(() => {
              successMessage.classList.add("hidden");
              successMessage.classList.remove("opacity-0");
            }, 300);
          }, 5000);
        })
        .catch((err) => {
          console.error("FAILED...", err);

          loadingSpinner.classList.add("hidden");
          submitBtn.querySelector("span").classList.remove("opacity-0");
          submitBtn.querySelector("svg").classList.remove("opacity-0");

          errorMessage.classList.remove("hidden");
          errorMessage.classList.add("animate-fade-in");

          setTimeout(() => {
            errorMessage.classList.add("opacity-0");
            setTimeout(() => {
              errorMessage.classList.add("hidden");
              errorMessage.classList.remove("opacity-0");
            }, 300);
          }, 5000);
        });
    });

    const inputFields = document.querySelectorAll(".input-field");
    inputFields.forEach((input) => {
      input.addEventListener("focus", () => {
        input.classList.add("scale-105");
        input.style.borderColor = "rgba(0, 173, 181, 0.7)";
      });

      input.addEventListener("blur", () => {
        input.classList.remove("scale-105");
        input.style.borderColor = "";
      });
    });
  });
</script>
